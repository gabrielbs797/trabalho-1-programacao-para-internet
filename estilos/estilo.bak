* {
    box-sizing: border-box;
}

body {
    color: #222222;
}

body, h1, h2, p, ul, li, a {
    margin: 0;
    padding: 0;
}

img {
    display: block;
    max-width: 100%;
}

ul {
    list-style: none;
}

/* CLASSES */

.introducao {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0 auto;
    max-width: 960px;
    padding: 60px 15px;
    text-align: center;
}

.menu {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 0 auto;
    max-width: 960px;
    padding: 15px;
}

.menu a {
    color: white;
}

.menu-logo a {
    font-size: 2.25rem;
    font-weight: bold;
    text-decoration: none;
}

.menu-nav a {
    display: block;
    font-size: 1.1rem;
    padding: 10px;
}

.menu-nav a:hover {
    color: #ff8d8d;
}

.menu-nav ul {
    display: flex;
    flex-wrap: wrap;
}

.preco {
    align-items: flex-end;
    background-color: #f7f7f7;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 60px;
}

.preco-item {
    border: 4px solid white;
    flex: 1;
    padding: 20px;
}

.preco-item a {
    display: block;
    margin: 0 auto;
    max-width: 300px;
}

.preco-item h2 {
    color: #a4a4a4;
    font-size: 2rem;
    font-weight: bold;
    margin-top: 20px;
    text-align: center;
}

.preco-item span {
    border-bottom: 4px solid white;
    border-top: 4px solid white;
    display: block;
    font-size: 2rem;
    font-weight: bold;
    margin: 20px auto;
    max-width: 300px;
    padding: 10px 0 5px 0;
    text-align: center;
}

.preco-item sup {
    font-size: 1.5rem;
}

.preco-item li {
    align-items: center;
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
}

.preco-item li::after {
    background-color: #dc3545;
    border-radius: 50%;
    content: '';
    display: block;
    height: 6px;
    width: 6px;
}

.preco-item ul {
    color: #7c7c7c;
    font-size: 1rem;
    font-style: italic;
    margin: 20px auto;
    max-width: 300px;
}

.produtos {
    margin: 60px auto;
    max-width: 960px;
}

.produtos h1 {
    font-size: 2rem;
    font-weight: bold;
    margin: 0 10px 60px 10px;
}

.produtos-conteiner {
    align-items: flex-end;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.produtos-item {
    flex: 1 1 175px;
}

.produtos-item h2 {
    background: #f7f7f7;
    color: #a4a4a4;
    font-size: 2rem;
    font-weight: bold;
    padding: 60px 20px;
}

.blue {
    border-top: 8px solid #66d9eb;
}

.pink {
    border-top: 8px solid #f9265e;
}

.purple {
    border-top: 8px solid #ae81ff;
}

.sobre {
    border-bottom: 2px solid #dc3545;
    border-top: 2px solid #dc3545;
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    max-width: 960px;
    padding: 60px 0;
}

.sobre-img {
    flex: 1 1 160px;
    margin: 0 15px;
}

.sobre-info {
    flex: 2 1 300px;
    margin: 0 15px;
}

.sobre-info h1 {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: .5rem;
}

.sobre-info p {
    color: #7c7c7c;
    line-height: 1.5;
    margin-bottom: 1rem;
}

.superinfo {
    flex-wrap: wrap;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    max-width: 960px;
    padding: 5px 15px;
}

.superinfo p, .superinfo a {
    gap: 10px;
}

.superinfo a, .superinfo-bg {
    color: white;
}

/* MEDIA QUERIES */

@media (max-width: 800px) {
    .preco {
        padding-left: 10px;
        padding-right: 10px;
    }
}